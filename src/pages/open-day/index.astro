                  "Short course in Strategic Business Leader (SBL)",
                  "Short course in Strategic Business Reporting (SBR)",
                  "Short course in Advanced Financial Management (AFM)",
                  "Short course in Advanced Taxation (ATX)",
                  "Short course in Advanced Audit and Assurance (AAA)",
                ].map((title) => (
                  <CardProgramme
                    content={{ title: title, new_programme: true }}
                  />
                ))
              }
            </div>
            <div slot="content-4">
              <CardProgramme
                content={cictl.frontmatter}
                style="border-bottom: 0"
              />
              <CardProgramme content={cidtl.frontmatter} />
              <!-- <CardProgramme content={icdl.frontmatter} /> -->
              <CardProgramme content={micro_credential.frontmatter} />
              <!-- <CardProgramme content={education_management.frontmatter} /> -->
              <!-- <CardProgramme content={teaching_learning.frontmatter} /> -->

              {
                courses_teaching_learning.map((item) => (
                  <>
                    <CardProgramme
                      content={{
                        title: item.data.title,
                      }}
                    />
                  </>
                ))
              }
            </div>
          </BsAccordion>
        </div>
      </div>
    </div>
  </section>

  <!-- track_record -->
  <section id="track_record" class="py-5 text-center">
    <div class="container">
      <div class="row row-cols-1 justify-content-center text-center">
        <h3 class="h4">Over 40 years of Proven Track Record</h3>
      </div>
