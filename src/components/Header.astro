---
import img_logo from "@assets/logo/mckl-campuses-logo.png";
const { homepage_path } = Astro.props;
---

<header class="header fixed-top shadow bg-primary">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <div class="navbar-logo__mobile d-lg-none">
        <a href={homepage_path}>
          <img
            class="img-fluid"
            width="512"
            src={img_logo}
            alt="MCKL Logo"
            style="filter: brightness(100)"
          />
        </a>
      </div>
      <div class="navbar-logo__desktop d-none d-lg-block" style="top: 0">
        <a href={homepage_path}>
          <img
            class="img-fluid"
            width="420"
            src={img_logo}
            alt="MCKL Logo"
            style="filter: brightness(100)"
          />
        </a>
      </div>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#header-navbar__toggle"
        aria-controls="header-navbar__toggle"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="bi bi-list"></i>
      </button>

      <div class="collapse navbar-collapse" id="header-navbar__toggle">
        <ul class="navbar-nav ml-auto">
          <!-- <li v-for="(item, index) in nav_primary_items" :class="`nav-item ${item.nav_item_class}`"
                :key="`nav-item-${index}`">
                <a :class="`nav-link ${item.nav_link_class}`" :href="item.link" @click="collapseNav">
                  {{ item.title }}
                </a>
              </li> -->
        </ul>
      </div>
    </div>
  </nav>
</header>
