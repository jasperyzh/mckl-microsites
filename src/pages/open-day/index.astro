<Layout
  title={title}
  toast_img_src="/images/230530-blurp-100merit.png"
  toast_href="/scholarship"
  toast_hide={false}
>
  <Header homepage_path={homepage_path} nav__items={nav__items} />

  <main class="main">
    {is_thank_you && <slot name="thank-you" />}

    <SectionMasthead
      bg_mobile={bg_mobile}
      bg_laptop={bg_laptop}
      bg_desktop={bg_desktop}
      bg_img_style="object-position: center"
      href="/open-day#registration"
    >
      <a class="masthead__link" href="/open-day#registration"></a>
      <style>
        .masthead__link {
          display: block;
          width: 50%;
          height: 20%;
          margin: auto;
          margin-bottom: 0;
        }
        @media (min-width: 992px) {
          .masthead__link {
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 0;
          }
        }
      </style>
    </SectionMasthead>
  </main>

  <!-- intro -->
  <section
    class="bg-primary py-4 text-center border-bottom border-secondary text-light text-light__heading pt-5"
    style="border-width: 6px !important"
  >
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <img
            width="420"
            src={tagline_believe_aspire_excel}
            alt="Believe. Aspire. Excel."
          />
          <h2>We believe in your dreams.</h2>
          <p>
            At MCKL's Open Day, you can discover our programmes and campuses and
            gain an insight into your college life, bringing you closer to
            achieving your goals and future prospects.
          </p>
        </div>
      </div>
    </div>
  </section>

  <SectionAboutmckl>
    <section slot="after_content">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <p>
              MCKL always seeks to provide opportunities to deserving students.
              For more information please fill in the form below and we will get
              in touch with you.
            </p>
          </div>
        </div>
        <div
          id="highlights"
          class={`row justify-content-center row-cols-2 row-cols-sm-3 mt-5 text-center ${
            card_icons.length >= 6 ? "row-cols-lg-4" : "row-cols-lg-5"
          }`}
        >
          {
            card_icons.map((item) => (
              <div class="col">
                <CardIcon item={item} classes="card__icon--large" />
              </div>
            ))
          }
        </div>
        <div class="row text-center">
          <div class="col">
            <p><small>*Terms & Conditions apply.</small></p>
          </div>
        </div>
        <div class="row justify-content-center my-4">
          <div class="col-auto">
            <a href="./#registration" class="btn btn-danger">Enquire today</a>
          </div>
        </div>
      </div>
    </section>
  </SectionAboutmckl>

  <SectionPartners />

  <SectionOpendayJuneEvent />

  <!-- programmes-offered -->
  <section id="programmes" class="py-5">
    <div class="container">
      <div class="row justify-content-center text-center mb-3">
        <div class="col-auto">
          <h2>Programmes Offered in 2023</h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-10">
          <BsAccordion
            client:idle
            show_first={true}
            accordion_id="programme"
            accordion_items={[
              { title: "Preparatory Course" },
              { title: "Pre-University" },
              { title: "Undergraduate Programme" },
              { title: "Professional Accounting" },
              { title: "Professional Development" },
            ]}
