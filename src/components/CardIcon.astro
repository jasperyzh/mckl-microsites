---
const { item, classes } = Astro.props;
---

<div class={`card card__icon ${classes}`}>
  <figure>
    <img width="120" src={item.img_src} alt={item.title} class="card-img" />
  </figure>
  <div class="card-body">
    <h5 class="card-title" set:html={item.title}></h5>

    {item.desc && <p class="card-text">{item.desc}</p>}
  </div>
</div>

<style lang="scss">
  .card__icon {
    background-color: transparent;
    border: 0;

    &.card__icon--large {
      margin: 1rem;
    }

    &.card__icon--large img {
      aspect-ratio: 4/3;
      max-height: 120px;
    }

    &.card__icon--filter-white img {
      filter: brightness(0) invert(1);
    }

    figure img {
      object-fit: contain;
      object-position: center;
      width: 100%;
      max-height: 92px;
    }
    .card-title {
      font-size: 1rem;
      display: inline-flex;
      align-items: center;
      @include media-breakpoint-up(sm) {
        min-height: 5ch;
      }
    }
    .card-body {
      padding: 0;
      color: $text-muted;
      font-size: 0.90625rem;
    }

    &--left-style {
      text-align: left;

      figure img {
        object-position: left;
      }
      .card-title {
        color: $secondary;
      }
      .card-body {
        color: $white;
      }
    }

    &--business {
      figure img {
        object-position: left;
      }
      .card-title {
        color: $secondary;
      }
    }
  }
</style>
