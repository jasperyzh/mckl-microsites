---
import campus_logo from "@assets/logo/mckl-campuses-logo.png";
import mckl_logo from "@assets/logo/mckl-logo.png";
import anniversary_logo from "@assets/logo/mckl-40anniversary_masthead-white.png";

const { mckl_logo_only = false, homepage_path, nav__items } = Astro.props;
---

<header class="header fixed-top shadow bg-primary">
  <nav
    class="navbar navbar-expand-lg navbar-dark bg-dark"
    aria-label="Fifth navbar example"
  >
    <div class="container">
      <a class="navbar-brand" href={homepage_path}>
        {
          mckl_logo_only ? (
            <img
              class="img-fluid"
              width="190"
              src={mckl_logo}
              alt="MCKL Logo"
              style="filter: brightness(100)"
            />
          ) : (
            <img
              class="img-fluid"
              width="430"
              src={campus_logo}
              alt="MCKL Logo"
              style="filter: brightness(100)"
            />
          )
        }
        <figure class="anniversary">
          <img
            src={anniversary_logo}
            alt="MCKL 40 Anniversary Logo"
            width="84"
          />
        </figure>
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar__primary"
        aria-controls="navbar__primary"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar__primary">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          {
            nav__items.map((item) => {
              if (!item.children) {
                return (
                  <li
                    class={`nav-item ${
                      item.nav_item_class ? item.nav_item_class : ""
                    }`}
                  >
                    <a
                      class={`nav-link ${
                        item.nav_link_class ? item.nav_link_class : ""
                      }`}
                      href={item.href}
                    >
                      {item.name}
                    </a>
                  </li>
                );
              } else {
                return (
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      {item.name}
                    </a>
                    <ul class="dropdown-menu">
                      {item.children.map((submenu_item) => (
                        <li>
                          <a class="dropdown-item" href={submenu_item.href}>
                            {submenu_item.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </li>
                );
              }
            })
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
  .navbar-brand img {
    max-width: clamp(270px, 50vw, 417px);
  }
  .btn.btn-danger {
    font-weight: bold;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
  }

  .anniversary {
    position: relative;
    padding: 0 0.5rem;
    margin-left: 0.4rem;
    margin-bottom: 0;
  }
  .anniversary:after {
    content: "";
    display: block;
    height: 60%;
    inset: 0 auto 0 0;
    position: absolute;
    background-color: #fff;
    width: 1px;
    margin: auto;
  }
</style>
