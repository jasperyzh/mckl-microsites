              <CardProgramme content={ausmat.frontmatter} />
            </div>
            <div slot="content-2">
              <CardProgramme content={adtp.frontmatter} />
              <CardProgramme content={dece.frontmatter} />
              <CardProgramme content={dsw.frontmatter} />
              <CardProgramme
                content={dcs.frontmatter}
                compiledContent={dcs.compiledContent()}
              />
              <CardProgramme
                content={dit.frontmatter}
                compiledContent={dit.compiledContent()}
              />
              <CardProgramme
                content={ddb.frontmatter}
                compiledContent={ddb.compiledContent()}
              />
              <CardProgramme content={ddm.frontmatter} />
              <CardProgramme content={dft.frontmatter} />
            </div>
            <div slot="content-3">
